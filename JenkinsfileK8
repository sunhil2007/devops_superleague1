pipeline {
   agent any
stages {
    stage('Run gcloud Version') {
        steps {
            withEnv(['GCLOUD_PATH=/usr/bin']) {
                sh '$GCLOUD_PATH/gcloud --version'
            }
         }
      }
    stage('Run Shell in Gcloud') {
        steps {
            echo "Deployment started"
	    sh 'ls -ltr'
	    sh 'pwd'
	    sh 'chmod +x k8-createinfra.sh'
            sh 'k8-createinfra.sh'
         }
      }
   }
}
